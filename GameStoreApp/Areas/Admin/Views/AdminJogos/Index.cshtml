@model ReflectionIT.Mvc.Paging.PagingList<GameStoreApp.Models.Jogo>
@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
<br>
<h3>Jogos</h3>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Procurar"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

Total de Jogos : @Model.TotalRecordCount
<div>
  <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create">Criar Jogo</a>
</p>
<div class="row">
    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isJogoPreferido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoCurta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isJogoPreferido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.JogoId">Edita</a> 
                            <a asp-action="Details" asp-route-id="@item.JogoId">Detalhes</a> 
                            <a asp-action="Delete" asp-route-id="@item.JogoId">Deleta</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        Total de Pedidos : @Model.TotalRecordCount
<div>
  <vc:pager paging-list="@Model"></vc:pager>
</div>
    </div>
</div>
